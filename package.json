{
  "name": "octicons-modular-monorepo",
  "private": true,
  "author": "Hien Dao <hien.dv.neo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna clean --yes && lerna bootstrap --hoist",
    "build": "lerna run build --stream",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "jest --runInBand",
    "test-ci": "npm test -- --coverage && codecov"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.28",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "codecov": "^3.1.0",
    "ejs": "^2.6.1",
    "eslint": "^5.12.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.6.0",
    "lerna": "^3.8.5",
    "lodash.camelcase": "^4.3.0",
    "lodash.mapvalues": "^4.6.0",
    "memory-fs": "^0.4.1",
    "octicons": "^8.2.0",
    "postcss-import": "^12.0.1",
    "react": "^16.7.0",
    "react-test-renderer": "^16.7.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.0.2",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^1.6.3",
    "rollup-plugin-uglify": "^6.0.0",
    "vue": "^2.5.21",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.28.3"
  },
  "homepage": "https://github.com/hiendv/octicons-modular",
  "bugs": {
    "url": "https://github.com/hiendv/octicons-modular/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiendv/octicons-modular.git"
  },
  "jest": {
    "verbose": false,
    "collectCoverageFrom": [
      "packages/**/lib/**/*.js",
      "packages/**/es/**/*.js"
    ],
    "testURL": "http://localhost/"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "standard"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "lib",
    "es",
    "coverage"
  ],
  "babel": {
    "presets": [
      "env"
    ]
  }
}
